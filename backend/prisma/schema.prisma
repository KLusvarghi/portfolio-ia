generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// criando um model
model Technology {
  id        Int     @id @default(autoincrement()) // sendo uma chave de auto incremento
  nome      String
  descricao String
  imagem    String
  destaque  Boolean @default(false)// passando valor padr√£o de false

  // sendo esse o nome da tabela
  @@map("technologies")
}
